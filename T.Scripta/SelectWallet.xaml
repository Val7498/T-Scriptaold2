        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T.Scripta"
        mc:Ignorable="d" ShowTitleBar="False"
        Title="Walletcreation"  Height="300" Width="500" BorderThickness="0" Background="#FF2F2F2F" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
